---
import { getEntry, render } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const handbook = await getEntry('handbook', 'mcp-configuration-files');

if (!handbook) {
  throw new Error('Handbook markdown entry was not found.');
}

const { Content } = await render(handbook);
---

<BaseLayout
  title={`${handbook.data.title} â€” GitHub Copilot CLI Handbook`}
  description={handbook.data.description}
>
  <article class="handbook-content">
    <header class="page-intro">
      <h1>{handbook.data.title}</h1>
      <p>{handbook.data.description}</p>
    </header>
    <Content />
  </article>
</BaseLayout>
